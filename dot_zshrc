#!/usr/bin/env zsh

##PROFILE ZSH
# zmodload zsh/zprof

# Enable Powerlevel10k instant prompt. Should stay close to the top of ~/.zshrc.
# Initialization code that may require console input (password prompts, [y/n]
# confirmations, etc.) must go above this block; everything else may go below.
# if [[ -r "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh" ]]; then
#   source "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh"
# fi

# LOCALE
export LC_ALL=en_US.UTF-8

setopt vi  # If EDITOR is set to vim, we have this for free
setopt extendedglob

# Source all the things âœ¨
eval "$(sheldon source)"


# Local bin
if [ -d "$HOME/.local/bin" ]; then
    path_push "$HOME/.local/bin"
fi

# Cargo env
if [ -d "$HOME/.cargo" ]; then
    path_push "$HOME/.cargo/bin"
fi

# Go env
export GO111MODULE=on
export GOPATH="$HOME/.go"
if [ -d "$GOPATH" ]; then
    path_push "$GOPATH/bin"
fi

## PURE PROMT
PURE_CMD_MAX_EXEC_TIME=2
POWERLEVEL9K_COMMAND_EXECUTION_TIME_THRESHOLD=2 #for powerlevel10k

## Characters included **will** be considered part of the word
WORDCHARS='*?_-.[]~=&;!#$%^(){}<>'

# To customize prompt, run `p10k configure` or edit ~/.p10k.zsh.
# source ~/.p10k.zsh

##PROFILE ZSH
# zprof